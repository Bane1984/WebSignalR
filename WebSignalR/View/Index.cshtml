@page
@{
    ViewData["Title"] = "Dobrodosli u SignalR Chat.";
}

@section Scripts {
    <script src="~/js/index.js"></script>
}

<link rel="stylesheet" href="~/css/chat.css" />

<div id="chatDialog" title="Chat">
    <div id="chatMainPanel">
        <ul id="chatHistory"></ul>
        <div id="bottomPanel">
            <form id="chatForm">
                <input id="messageTextbox" type="text" placeholder="Unesite poruku..." />
                <button type="submit">Posalji</button>
            </form>
        </div>
    </div>
</div>
